@page "/counter"
<Title>Counter(@currentCount)</Title>
<Meta Property="og:title" Content="@Title" />
<Meta Name="keywords" Content="blazor,counter" />
<Link Rel="canonical" Href="http://localhost/counter" />
<Link Rel="prev" Href="/home" />
<Link Rel="next" Href="/fetchdata" />
<Link Rel="icon" Href="@($"/_content/SampleSite.Components/favicons/{GetFaviconName()}")" />

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private string Title => $"Counter({currentCount})";

    private void IncrementCount()
    {
        currentCount++;
    }

    private string GetFaviconName()
    {
        return currentCount > 9 ? "counter-9-plus.png" : $"counter-{currentCount}.png";
    }
}
